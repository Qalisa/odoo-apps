<odoo>
    <template id="custom_partner_fields_invoice" inherit_id="account.report_invoice_document">
        <xpath expr="//address" position="after">
            <t t-if="o.partner_id.birthdate or o.partner_id.birthplace or o.partner_id.national_id_card_number">
                <div class="custom-information">
                    <t t-if="o.partner_id.birthdate">
                        <p><strong>Date de Naissance :</strong> <t t-esc="o.partner_id.birthdate"/></p>
                    </t>
                    <t t-if="o.partner_id.birthplace">
                        <p><strong>Lieu de Naissance :</strong> <t t-esc="o.partner_id.birthplace"/></p>
                    </t>
                    <t t-if="o.partner_id.national_id_card_number">
                        <p><strong>Num√©ro CNI :</strong> <t t-esc="o.partner_id.national_id_card_number"/></p>
                    </t>
                </div>
            </t>
        </xpath>
    </template>
</odoo>